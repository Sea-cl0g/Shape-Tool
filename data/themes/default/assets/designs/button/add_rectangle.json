{
    "description" : "Most basic and easy-to-see color theme",
    "author" : "boo_manKnow",
    
    "containerAnker": "topLeft",
    "blockMode": "vertical",
    "blockAnker":"CORNER",
    
    "button_types":{
        "standard":"squareButton"
    },
    "fills":{
        "defaultCol": "#ff1100"
    },
    "layouts":{
        "default": {
            "x_point": 0, 
            "y_point": 0, 
            "width_point": 10, 
            "height_point": 10
        }
    },
    "icons":{
        "main":{
            "size": 0.8,
            "path": "icon/ERROR_ICON.svg"
        }
    },
    "shadows":{
        "main":{
            "shadowMode": "BOTTOMRIGHT",
            "shadowDistPoint": 0.1,
            "color": "#ff1100"
        }
    },
    "stroke":{
        "main":{
            "strokeWeight": 0,
            "color": "#42c8ed"
        }
    },

    "element1": {
        "type": "triggerButton",
        "style":[
            {
                "predicate": "normal", 
                "button_type": "$standard",
                "layout": "$default",
                "fill": "$defaultCol",
                "icon":"$main"
            },
            {
                "predicate": "touched", 
                "button_type": "$standard",
                "layout": "$default",
                "fill": "$defaultCol",
                "stroke":{
                    "strokeWeight": 10,
                    "color": "#42c8ed"
                },
                "icon":"$main",
                "shadow": "$main"
            },
            {
                "predicate": "clicked", 
                "button_type": "$standard",
                "layout": "$default",
                "fill": "$defaultCol",
                "icon":"$main"
            }
        ]
    }
}