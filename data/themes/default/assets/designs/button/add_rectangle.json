{
    "description" : "Most basic and easy-to-see color theme",
    "author" : "boo_manKnow",
    
    "containerAnker": "topLeft",
    "blockMode": "vertical",
    "blockAnker":"CORNER",
    
    "button_types":{
        "standard":"squareButton"
    },
    "colors":{
        "main": "#4a7083ff",
        "shadow": "#000000"
    },
    "layouts":{
        "default": {
            "x_point": 0, 
            "y_point": 0, 
            "width_point": 1, 
            "height_point": 1
        }
    },

    "element1": {
        "type": "triggerButton",
        "style":[
            {
                "predicate": "normal", 
                "button_type": "squareButton",
                "layout": "$default",
                "color": "#4a7083ff",
                "icon":{
                    "size": 0.8,
                    "path": "icon/ERROR_ICON.svg"
                }
            },
            {
                "predicate": "touched", 
                "button_type": "squareButton",
                "layout": {
                    "x_point": 10, 
                    "y_point": 10, 
                    "width_point": 10, 
                    "height_point": 10
                },
                "color": "#4a7083ff",
                "stroke":{
                    "strokeWeight": 10,
                    "color": "#42c8ed"
                },
                "icon":{
                    "size": 0.8,
                    "path": "icon/ERROR_ICON.svg"
                },
                "shadow": {
                    "shadowMode": "BOTTOMRIGHT",
                    "shadowDistPoint": 0.1,
                    "color": "#000000"
                }
            },
            {
                "predicate": "clicked", 
                "button_type": "squareButton",
                "layout": {
                    "x_point": 10, 
                    "y_point": 10, 
                    "width_point": 8, 
                    "height_point": 8
                },
                "color": "#4a7083ff",
                "icon":{
                    "size": 0.8,
                    "path": "icon/ERROR_ICON.svg"
                }
            }
        ]
    }
}