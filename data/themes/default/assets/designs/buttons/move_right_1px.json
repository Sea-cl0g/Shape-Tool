{
    "description": "Most basic and easy-to-see color theme",
    "author": "boo_manKnow",
    "containerAnker": "bottomLeft",
    "blockMode": "vertical",
    "blockAnker": "CENTER",
    "layer": 2,
    "button_types": {
        "maru": "eachRoundedButton"
    },
    "colors": {
        "defaultCol": "#FFFFFF",
        "clickedCol": "#e0e9e7",
        "pointCol": "#857f8e"
    },
    "floats": {
        "x_pos": 9,
        "y_pos": 2,
        "b_size": 0.8,
        "r_point": 0.2,
        "x_counter": 2,
        "y_counter": 0
    },
    "layouts": {
        "buttonLayout": {
            "x_point": "$x_counter * $b_size + $x_pos",
            "y_point": "$y_counter * $b_size + $y_pos",
            "width_point": "$b_size",
            "height_point": "$b_size",
            "br_point": "$r_point"
        }
    },
    "images": {
        "main": {
            "size": 0.8,
            "path": "icon/move_right.svg",
            "color": "$pointCol"
        }
    },
    "shadows": {
        "main": {
            "shadowMode": "BOTTOMRIGHT",
            "shadowDistPoint": 0.2,
            "color": "#222222"
        }
    },
    "strokes": {
        "defaultStroke": {
            "stroke_point": 0.05,
            "color": "$pointCol"
        }
    },
    "elements": {
        "@MAIN_BUTTON": {
            "type": "button",
            "style": [
                {
                    "predicate": "normal",
                    "button_type": "$maru",
                    "layout": "$buttonLayout",
                    "fill": "$defaultCol",
                    "stroke": "$defaultStroke",
                    "image": "$main"
                },
                {
                    "predicate": "touched",
                    "button_type": "$maru",
                    "layout": "$buttonLayout",
                    "fill": "$clickedCol",
                    "stroke": "$defaultStroke",
                    "image": "$main"
                },
                {
                    "predicate": "clicked",
                    "button_type": "$maru",
                    "layout": "$buttonLayout",
                    "fill": "$defaultCol",
                    "stroke": "$defaultStroke",
                    "image": "$main"
                }
            ]
        }
    }
}