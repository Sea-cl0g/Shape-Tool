{
    "description": "Most basic and easy-to-see color theme",
    "author": "boo_manKnow",
    "containerAnker": "center",
    "blockMode": "vertical",
    "blockAnker": "CENTER",
    "layer": 2,
    "button_types": {
        "maru": "roundedSquareButton"
    },
    "colors": {
        "defaultCol": "#4a7083ff"
    },
    "layouts": {
        "buttonLayout": {
            "x_point": 0,
            "y_point": 2,
            "width_point": 6,
            "height_point": 1,
            "r_point": 0.3
        }
    },
    "images": {
        "main": {
            "size": 0.8,
            "path": "icon/null.svg"
        }
    },
    "shadows": {
        "main": {
            "shadowMode": "BOTTOMRIGHT",
            "shadowDistPoint": 0.2,
            "color": "#222222"
        }
    },
    "elements": {
        "@MAIN_BUTTON": {
            "type": "button",
            "style": [
                {
                    "predicate": "normal",
                    "button_type": "$maru",
                    "layout": "$buttonLayout",
                    "fill": "$defaultCol",
                    "image": "$main",
                    "shadow": "$main"
                },
                {
                    "predicate": "touched",
                    "button_type": "$maru",
                    "layout": "$buttonLayout",
                    "fill": "$defaultCol",
                    "stroke": {
                        "stroke_point": 0.1,
                        "color": "#ffffff"
                    },
                    "image": "$main",
                    "shadow": "$main"
                },
                {
                    "predicate": "clicked",
                    "button_type": "$maru",
                    "layout": "$buttonLayout",
                    "fill": "$defaultCol",
                    "image": "$main",
                    "shadow": "$main"
                }
            ]
        }
    }
}