{
    "description": "It's the default theme pack! Hello!",
    "author": "boo_manKnow",
    "containerAnker": "topLeft",
    "blockMode": "vertical",
    "blockAnker": "CENTER",
    "layer": 2,
    "colors": {
        "defaultCol": "#4a7083ff"
    },
    "layouts": {
        "buttonLayout": {
            "x_point": 4,
            "y_point": 4,
            "width_point": 2,
            "height_point": 2,
            "r_point": 0.3
        }
    },
    "images": {
        "main": {
            "scale": 0.8,
            "path": "icon/add_rectangle.svg"
        }
    },
    "shadows": {
        "main": {
            "shadowMode": "BOTTOMRIGHT",
            "shadowDistPoint": 0.2,
            "color": "#222222"
        }
    },
    "elements": {
        "@MAIN_BUTTON": {
            "type": "button",
            "style": [
                {
                    "predicate": "normal",
                    "layout": "$buttonLayout",
                    "fillCol": "$defaultCol",
                    "image": "$main",
                    "shadow": "$main"
                },
                {
                    "predicate": "touched",
                    "layout": "$buttonLayout",
                    "fillCol": "$defaultCol",
                    "stroke": {
                        "stroke_point": 0.1,
                        "color": "#ffffff"
                    },
                    "image": "$main",
                    "shadow": "$main"
                },
                {
                    "predicate": "clicked",
                    "layout": "$buttonLayout",
                    "fillCol": "$defaultCol",
                    "image": "$main",
                    "shadow": "$main"
                }
            ]
        }
    }
}