{
    "containerAnker": "bottomRight",
    "blockMode": "vertical",
    "blockAnker": "CENTER",
    "layer": 2,
    "colors": {
        "iconFill": "#ffffff",
        "iconTouched": "#ff9200ff",
        "iconClicked": "#d100ffff"
    },
    "floats": {
        "x_pos": 5,
        "y_pos": 1.5,
        "w": 8,
        "h": 0.5,
        "b_size": 1
    },
    "layouts": {
        "buttonLayout": {
            "x_point": "$w / -2 + $x_pos + 0.5",
            "y_point": "$h / 2 + $y_pos",
            "width_point": "$b_size",
            "height_point": "$b_size",
            "r_point": "$r_point"
        }
    },
    "elements": {
        "@MAIN_BUTTON": {
            "type": "button",
            "style": [
                {
                    "predicate": "normal",
                    "layout": "$buttonLayout",
                    "image": {
                        "scale": 0.8,
                        "path": "icon/save.svg",
                        "color": "$iconFill"
                    }
                },
                {
                    "predicate": "touched",
                    "layout": "$buttonLayout",
                    "image": {
                        "scale": 0.8,
                        "path": "icon/save.svg",
                        "color": "$iconTouched"
                    }
                },
                {
                    "predicate": "clicked",
                    "layout": "$buttonLayout",
                    "image": {
                        "scale": 0.8,
                        "path": "icon/save.svg",
                        "color": "$iconFill"
                    }
                }
            ]
        }
    }
}