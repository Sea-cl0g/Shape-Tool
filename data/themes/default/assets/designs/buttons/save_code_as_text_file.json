{
    "description": "Most basic and easy-to-see color theme",
    "author": "boo_manKnow",
    "containerAnker": "center",
    "blockMode": "vertical",
    "blockAnker": "CENTER",
    "layer": 10,

    "button_types": {
        "maru": "roundedSquareButton"
    },
    "colors": {
        "buttonFill": "#FFFFFF",
        "buttonTouched": "#DDDDDD",
        "buttonClicked": "#0068E1",
        "iconFill": "#0088F6",
        "iconTouched": "#002172"
    },
    "floats":{
        "b_size": 1
    },
    "layouts": {
        "buttonLayout": {
            "x_point": -6,
            "y_point": -6.25,
            "width_point": "$b_size",
            "height_point": "$b_size",
            "r_point": "$b_size / 2"
        }
    },

    "elements": {
        "@MAIN_BUTTON": {
            "type": "button",
            "style": [
                {
                    "predicate": "normal",
                    "button_type": "$maru",
                    "layout": "$buttonLayout",
                    "fill": "$buttonFill",
                    "image": {
                        "size": 0.8,
                        "path": "icon/save_code_as_text_file.svg",
                        "color": "$iconFill"
                    }
                },
                {
                    "predicate": "touched",
                    "button_type": "$maru",
                    "layout": "$buttonLayout",
                    "fill": "$buttonTouched",
                    "image": {
                        "size": 0.8,
                        "path": "icon/save_code_as_text_file.svg",
                        "color": "$iconTouched"
                    }
                },
                {
                    "predicate": "clicked",
                    "button_type": "$maru",
                    "layout": "$buttonLayout",
                    "fill": "$buttonClicked",
                    "stroke": {
                        "stroke_point": 0.1,
                        "color": "#ffffff"
                    },
                    "image": {
                        "size": 0.8,
                        "path": "icon/save_code_as_text_file.svg",
                        "color": "$buttonFill"
                    }
                }
            ]
        }
    }
}